generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  VIEWER
  EDITOR
}

model User {
  id        String     @id @default(uuid()) @db.Char(36)
  fullName  String     @map("full_name") @db.VarChar(255)
  email     String     @unique @db.VarChar(100)
  password  String     @db.VarChar(255)
  role      Role       @default(VIEWER)
  createdAt DateTime   @default(now()) @map("created_at")
  updatedAt DateTime   @updatedAt @map("updated_at")
  loginLogs LoginLog[]

  @@map("users")
}

model Candidate {
  id           String        @id @default(uuid()) @db.Char(36)
  firstName    String        @map("first_name") @db.VarChar(50)
  lastName     String        @map("last_name") @db.VarChar(50)
  major        String        @db.VarChar(200)
  email        String        @unique @db.VarChar(100)
  phone        String        @db.VarChar(20)
  semester     String        @db.VarChar(20)
  studentCode  String        @unique @map("student_code") @db.VarChar(20)
  note         String        @default("")
  isSendMail   Boolean       @default(false) @map("is_send_mail")
  createdAt    DateTime      @default(now()) @map("created_at")
  updatedAt    DateTime      @updatedAt @map("updated_at")
  scoreResults ScoreResult[]

  @@map("candidates")
}

model LoginLog {
  id        String   @id @default(uuid()) @db.Char(36)
  userId    String   @map("user_id")
  note      String   @db.VarChar(255)
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")
  user      User     @relation(fields: [userId], references: [id])

  @@map("logs")
}

model EmailTemplate {
  id        String     @id @default(uuid()) @db.Char(36)
  name      String     @map("name") @db.VarChar(100)
  pathName  String     @unique @map("path_name") @db.VarChar(100)
  subject   String     @db.VarChar(255)
  round     RoundType  @default(ROUND_1)
  result    ResultType @default(PASSED)
  values    Json
  status    Boolean    @default(false)
  createdAt DateTime   @default(now()) @map("created_at")
  updatedAt DateTime   @updatedAt @map("updated_at")

  @@map("email_templates")
}

model Settings {
  name  String @unique @db.VarChar(255)
  value String @default("") @db.VarChar(255)

  @@map("settings")
}

model ScoreResult {
  id          String    @id @default(uuid()) @db.Char(36)
  candidateId String    @map("candidate_id")
  round       RoundType @default(ROUND_1)
  score       Json      @db.Json
  result      Status    @default(PENDING)
  createdAt   DateTime  @default(now()) @map("created_at")
  updatedAt   DateTime  @updatedAt @map("updated_at")
  candidate   Candidate @relation(fields: [candidateId], references: [id], onDelete: Cascade)
  firstSubmit String    @map("first_submit") @db.VarChar(255)
  finalSubmit String    @map("final_submit") @db.VarChar(255)

  @@map("score_results")
}

enum Status {
  PASSED
  FAILED
  PENDING
}

enum RoundType {
  ROUND_1
  ROUND_2
  ROUND_3
}

enum ResultType {
  PASSED
  FAILED
}
